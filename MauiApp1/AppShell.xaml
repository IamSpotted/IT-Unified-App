    </FlyoutItem>

    <FlyoutItem Title="ðŸ–¨ï¸ Printers" Route="printers">
        <ShellContent ContentTemplate="{DataTemplate views:PrintersPage}" Shell.NavBarIsVisible="False" />
    </FlyoutItem>
    
    <FlyoutItem Title="ðŸŒ Networking" Route="networking">
        <ShellContent ContentTemplate="{DataTemplate views:NetworkingPage}" Shell.NavBarIsVisible="False" />
    </FlyoutItem>
       
    <FlyoutItem Title="ðŸ“œ Scripts" Route="scripts">
        <ShellContent ContentTemplate="{DataTemplate views:ScriptsPage}" Shell.NavBarIsVisible="False" />
