<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             x:Class="MauiApp1.Controls.AppHeader">
    
    <!-- Application Header -->
    <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2C}"
            StrokeThickness="0">
        <Grid ColumnDefinitions="*,Auto,Auto,*" Padding="15,10" MinimumHeightRequest="80">
            
            <!-- Left side - App title -->
            <Label Grid.Column="0" 
                   x:Name="PageTitleLabel"
                   Text="ITSF Network Tools" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}" />
            
            <!-- Digital Clock - Center -->
            <controls:SevenSegmentClock Grid.Column="1" 
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
            
            <!-- Admin Status - Between center and right -->
            <StackLayout Grid.Column="2" 
                         Orientation="Horizontal"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="5"
                         Margin="20,0">
                
                <Label x:Name="AdminIconLabel" 
                       Text="ï¿½"
                       FontSize="16"
                       VerticalOptions="Center" />
                       
                <Label x:Name="AdminTextLabel" 
                       Text="USER"
                       FontSize="12"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light=#D32F2F, Dark=#F44336}" />
                       
            </StackLayout>
            
            <!-- Theme Toggle - Right side -->
            <Label Grid.Column="3" 
                   x:Name="ThemeToggle"
                   Text="ðŸŒ™" 
                   FontSize="24"
                   HorizontalOptions="End"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnThemeToggleTapped" />
                </Label.GestureRecognizers>
            </Label>
            
        </Grid>
    </Border>
    
</ContentView>
