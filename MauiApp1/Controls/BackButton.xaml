<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Controls.BackButton"
             x:Name="BackButtonControl">
    
    <Button x:Name="BackButtonElement"
            Text="{Binding BackText, Source={x:Reference BackButtonControl}}"
            Command="{Binding BackCommand, Source={x:Reference BackButtonControl}}"
            BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A8A}"
            TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
            FontSize="14"
            Padding="15,8"
            CornerRadius="6"
            HorizontalOptions="Start" />

</ContentView>
