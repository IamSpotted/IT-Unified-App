<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiApp1.Views.RestartNetOpPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModels"
             xmlns:converters="clr-namespace:MauiApp1.Converters"
             Title="Restart NetOp Service"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Application Header -->
        <controls:AppHeader Grid.Row="0" />
        
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Navigation and Title Section -->
                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,10">
                    <controls:BackButton BackText="â† Back to Scripts"
                                        BackRoute="//scripts" />
                    
                    <Label Text="Restart NetOp/Impero Service"
                           FontSize="24"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           HorizontalOptions="Fill" />
                </StackLayout>

                <!-- Instructions -->
                <Label Grid.Row="1"
                       Text="Enter computer names or IP addresses (separated by commas) where NetOp/Impero services need to be restarted."
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10" />

                <!-- Input Section -->
                <Frame Grid.Row="2" 
                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                       Padding="15"
                       CornerRadius="8">
                    <StackLayout Spacing="10">
                        <Label Text="Target Computers:" 
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Entry x:Name="TargetEntry"
                               Text="{Binding TargetInput}"
                               Placeholder="computer1, 192.168.1.100, server01"
                               FontSize="14"
                               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                               PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}" />
                    </StackLayout>
                </Frame>

                <!-- Action Buttons -->
                <StackLayout Grid.Row="3" 
                             Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="15">
                    <Button Text="â†» Restart Netop"
                            Command="{Binding RestartCommand}"
                            BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                            TextColor="White"
                            WidthRequest="160"
                            HeightRequest="45"
                            CornerRadius="8"
                            FontAttributes="Bold" />
                    <Button Text="ðŸ—‘ï¸ Clear Results"
                            Command="{Binding ClearCommand}"
                            BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}"
                            TextColor="White"
                            WidthRequest="160"
                            HeightRequest="45"
                            CornerRadius="8"
                            FontAttributes="Bold" />
                </StackLayout>

                <!-- Results Section -->
                <CollectionView Grid.Row="4" 
                               ItemsSource="{Binding ComputerResults}"
                               IsVisible="{Binding HasResults}"
                               Margin="0,10,0,0"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <!-- Computer Info Card -->
                                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                       BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                                       Padding="20"
                                       CornerRadius="12"
                                       HasShadow="True">
                                    
                                    <Grid>
                                        <!-- Error State -->
                                        <StackLayout IsVisible="{Binding IsError}" Spacing="10">
                                            <StackLayout Orientation="Horizontal" Spacing="10">
                                                <Label Text="âš ï¸" FontSize="24" VerticalOptions="Center" />
                                                <Label Text="{Binding DisplayName}" 
                                                       FontSize="18" 
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#D32F2F, Dark=#F44336}"
                                                       VerticalOptions="Center" />
                                            </StackLayout>
                                            <Label Text="{Binding Manufacturer}"
                                                   FontSize="14"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                   LineBreakMode="WordWrap" />
                                        </StackLayout>
                                        
                                        <!-- Success State -->
                                    <StackLayout IsVisible="{Binding IsError, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">
                                        
                                        <!-- Header with Computer Name -->
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Label Text="ðŸ’»" FontSize="24" VerticalOptions="Center" />
                                            <Label Text="{Binding DisplayName}" 
                                                   FontSize="20" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                        
                                        <!-- Hardware Information -->
                                        <StackLayout Spacing="8">
                                            <Label Text="ðŸ­ Hardware Information" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                <Label Grid.Row="0" Grid.Column="0" Text="Manufacturer:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Manufacturer}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                <Label Grid.Row="1" Grid.Column="0" Text="Model:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Model}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                <Label Grid.Row="2" Grid.Column="0" Text="Serial Number:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding SerialNumber}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                            </Grid>
                                        </StackLayout>
                                        
                                        <!-- Operating System Information -->
                                        <StackLayout Spacing="8">
                                            <Label Text="ðŸ–¥ï¸ Operating System" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                <Label Grid.Row="0" Grid.Column="0" Text="OS:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding OperatingSystem}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                <Label Grid.Row="1" Grid.Column="0" Text="Architecture:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding OSArchitecture}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                <Label Grid.Row="2" Grid.Column="0" Text="BIOS Version:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="2" Grid.Column="1" Text="{Binding BIOSVersion}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                <Label Grid.Row="3" Grid.Column="0" Text="Uptime:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="3" Grid.Column="1" Text="{Binding Uptime}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                            </Grid>
                                        </StackLayout>
                                        
                                        <!-- Asset Tag (if available) -->
                                        <StackLayout IsVisible="{Binding HasAssetTag}" Spacing="8">
                                            <Label Text="ðŸ·ï¸ Asset Information" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                            <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10">
                                                <Label Grid.Row="0" Grid.Column="0" Text="Asset Tag:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding AssetTag}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                            </Grid>
                                        </StackLayout>
                                        
                                        <!-- Network Information -->
                                        <StackLayout Spacing="8" IsVisible="{Binding HasNetworkAdapters}">
                                            <Label Text="ðŸŒ Network Information" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                            <StackLayout Spacing="5">
                                                <CollectionView ItemsSource="{Binding NetworkAdapters}"
                                                               SelectionMode="None">
                                                    <CollectionView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10" Padding="0,2">
                                                                <Label Grid.Column="0" 
                                                                       Text="{Binding Name, StringFormat='{0}:'}" 
                                                                       FontAttributes="Bold" 
                                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                                                                       VerticalOptions="Start" />
                                                                <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="15" FlowDirection="LeftToRight">
                                                                    <!-- IP Address -->
                                                                    <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasIPAddress}">
                                                                        <Label Text="{Binding IPAddress}" 
                                                                               FontFamily="Consolas"
                                                                               FontSize="14"
                                                                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                               VerticalOptions="Center" />
                                                                    </StackLayout>
                                                                    
                                                                    <!-- MAC Address -->
                                                                    <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasMACAddress}">
                                                                        <Label Text="MAC:" 
                                                                               FontSize="14"
                                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                                               VerticalOptions="Center" />
                                                                        <Label Text="{Binding FormattedMACAddress}" 
                                                                               FontFamily="Consolas"
                                                                               FontSize="14"
                                                                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                               VerticalOptions="Center" />
                                                                    </StackLayout>
                                                                    
                                                                    <!-- No Data Available -->
                                                                    <Label IsVisible="{Binding HasIPAddress, Converter={StaticResource InvertedBoolConverter}}"
                                                                           Text="No network data available"
                                                                           FontSize="14"
                                                                           FontAttributes="Italic"
                                                                           TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                                           VerticalOptions="Center" />
                                                                </StackLayout>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </CollectionView.ItemTemplate>
                                                </CollectionView>
                                            </StackLayout>
                                        </StackLayout>
                                        
                                        <!-- Fallback Network Information (for errors or when structured data unavailable) -->
                                        <StackLayout Spacing="8" IsVisible="{Binding HasNetworkAdapters, Converter={StaticResource InvertedBoolConverter}}">
                                            <Label Text="ðŸŒ Network Information" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                            <Frame BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2A2A2A}"
                                                   BorderColor="{AppThemeBinding Light=#E9ECEF, Dark=#3A3A3A}"
                                                   Padding="10"
                                                   CornerRadius="6">
                                                <Label Text="{Binding NetworkInfo}"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       LineBreakMode="WordWrap"
                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#E0E0E0}" />
                                            </Frame>
                                        </StackLayout>
                                        
                                    </StackLayout>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Status/Loading Section -->
                <StackLayout Grid.Row="5" 
                             HorizontalOptions="Center"
                             IsVisible="{Binding IsScanning}"
                             Margin="0,10,0,0">
                    <ActivityIndicator IsRunning="{Binding IsScanning}"
                                       Color="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                       WidthRequest="30"
                                       HeightRequest="30" />
                    <Label Text="{Binding StatusMessage}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>

            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>