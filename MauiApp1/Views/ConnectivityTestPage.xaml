<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiApp1.Views.ConnectivityTestPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModels"
             xmlns:converters="clr-namespace:MauiApp1.Converters"
             Title="Connectivity Test"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Application Header -->
        <controls:AppHeader Grid.Row="0" />
        
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Navigation and Title Section -->
                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,10">
                    <controls:BackButton BackText="← Back to Networking"
                                        BackRoute="//networking" />
                    
                    <Label Text="Network Connectivity Test"
                           FontSize="24"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           HorizontalOptions="Fill" />
                </StackLayout>

                <!-- Instructions -->
                <Label Grid.Row="1"
                       Text="Enter a hostname or IP address to test network connectivity with live ping results."
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10" />

                <!-- Input Section -->
                <Frame Grid.Row="2" 
                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                       Padding="15"
                       CornerRadius="8">
                    <StackLayout Spacing="15">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <StackLayout Grid.Column="0" Spacing="10">
                                <Label Text="Target Host:" 
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                <Entry x:Name="TargetEntry"
                                       Text="{Binding TargetHost}"
                                       Placeholder="google.com or 8.8.8.8"
                                       FontSize="14"
                                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                       PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}" />
                            </StackLayout>
                            
                            <StackLayout Grid.Column="1" Spacing="10">
                                <Label Text="Ping Count:" 
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                <Picker x:Name="PingCountPicker"
                                        SelectedItem="{Binding SelectedPingCount}"
                                        FontSize="14"
                                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                        TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>1</x:String>
                                            <x:String>5</x:String>
                                            <x:String>10</x:String>
                                            <x:String>25</x:String>
                                            <x:String>Continuous</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </StackLayout>
                        </Grid>
                        
                        <!-- Action Buttons -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="Center"
                                     Spacing="15">
                            <Button Text="🔍 Start Ping Test"
                                    Command="{Binding StartPingCommand}"
                                    IsEnabled="{Binding IsRunning, Converter={StaticResource InvertedBoolConverter}}"
                                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                    TextColor="White"
                                    WidthRequest="160"
                                    HeightRequest="45"
                                    CornerRadius="8"
                                    FontAttributes="Bold" />
                            <Button Text="⏹️ Stop Test"
                                    Command="{Binding StopPingCommand}"
                                    IsEnabled="{Binding IsRunning}"
                                    BackgroundColor="{AppThemeBinding Light=#F44336, Dark=#FF5722}"
                                    TextColor="White"
                                    WidthRequest="160"
                                    HeightRequest="45"
                                    CornerRadius="8"
                                    FontAttributes="Bold" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Results Section -->
                <Grid Grid.Row="3" 
                      ColumnDefinitions="2*,*" 
                      ColumnSpacing="15"
                      Margin="0,10,0,0"
                      IsVisible="{Binding HasResults}">
                    
                    <!-- Left Side - Ping Results -->
                    <Frame Grid.Column="0"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                           Padding="15"
                           CornerRadius="8"
                           HasShadow="True">
                        <StackLayout Spacing="10">
                            <Label Text="📊 Live Ping Results" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                            
                            <ScrollView MaximumHeightRequest="400">
                                <CollectionView ItemsSource="{Binding PingResults}"
                                               SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
                                                  ColumnSpacing="10" 
                                                  Padding="5,3"
                                                  BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2A2A2A}">
                                                <Label Grid.Column="0" 
                                                       Text="{Binding PingNumber, StringFormat='#{0}'}" 
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                       VerticalOptions="Center" />
                                                <Label Grid.Column="1" 
                                                       Text="{Binding Status}" 
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       TextColor="{Binding StatusColor}"
                                                       VerticalOptions="Center" />
                                                <Label Grid.Column="2" 
                                                       Text="{Binding Time}" 
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                       VerticalOptions="Center" />
                                                <Label Grid.Column="3" 
                                                       Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}" 
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                       VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </ScrollView>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Right Side - Statistics -->
                    <StackLayout Grid.Column="1" Spacing="15">
                        
                        <!-- Live Stats -->
                        <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                               Padding="15"
                               CornerRadius="8"
                               HasShadow="True">
                            <StackLayout Spacing="10">
                                <Label Text="📈 Live Statistics" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Sent:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding PacketsSent}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                    <Label Grid.Row="1" Grid.Column="0" Text="Received:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding PacketsReceived}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#4CAF50, Dark=#81C784}" />
                                    <Label Grid.Row="2" Grid.Column="0" Text="Lost:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding PacketsLost}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#F44336, Dark=#EF5350}" />
                                    <Label Grid.Row="3" Grid.Column="0" Text="Loss %:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding LossPercentage, StringFormat='{0:F1}%'}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}" />
                                    <Label Grid.Row="4" Grid.Column="0" Text="Status:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding Status}" FontSize="12" TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}" />
                                </Grid>
                            </StackLayout>
                        </Frame>
                        
                        <!-- Response Time Stats -->
                        <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                               Padding="15"
                               CornerRadius="8"
                               HasShadow="True"
                               IsVisible="{Binding HasResponseTimes}">
                            <StackLayout Spacing="10">
                                <Label Text="⏱️ Response Times" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                    <Label Grid.Row="0" Grid.Column="0" Text="Min:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding MinResponseTime, StringFormat='{0} ms'}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#4CAF50, Dark=#81C784}" />
                                    <Label Grid.Row="1" Grid.Column="0" Text="Max:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding MaxResponseTime, StringFormat='{0} ms'}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#F44336, Dark=#EF5350}" />
                                    <Label Grid.Row="2" Grid.Column="0" Text="Avg:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding AvgResponseTime, StringFormat='{0:F1} ms'}" FontFamily="Consolas" TextColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}" />
                                </Grid>
                            </StackLayout>
                        </Frame>
                        
                        <!-- Progress Indicator -->
                        <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                               Padding="15"
                               CornerRadius="8"
                               HasShadow="True"
                               IsVisible="{Binding IsRunning}">
                            <StackLayout Spacing="10" HorizontalOptions="Center">
                                <ActivityIndicator IsRunning="{Binding IsRunning}"
                                                   Color="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                   WidthRequest="30"
                                                   HeightRequest="30" />
                                <Label Text="{Binding StatusMessage}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center" />
                            </StackLayout>
                        </Frame>
                        
                    </StackLayout>
                </Grid>

            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>
