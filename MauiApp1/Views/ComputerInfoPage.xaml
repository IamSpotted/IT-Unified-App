<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiApp1.Views.ComputerInfoPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModels"
             xmlns:converters="clr-namespace:MauiApp1.Converters"
             Title="Computer Information"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Application Header -->
        <controls:AppHeader Grid.Row="0" />
        
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Navigation and Title Section -->
                <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,10">
                    <controls:BackButton BackText="← Back to Scripts"
                                        BackRoute="//scripts" />
                    
                    <Label Text="Computer Information Gathering"
                           FontSize="24"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           HorizontalOptions="Fill" />
                </StackLayout>

                <!-- Instructions -->
                <Label Grid.Row="1"
                       Text="Enter computer names or IP addresses (separated by commas). Leave blank to scan local computer only."
                       FontSize="14"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10" />

                <!-- Input Section -->
                <Frame Grid.Row="2" 
                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2B2B2B}"
                       BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                       Padding="15"
                       CornerRadius="8">
                    <StackLayout Spacing="10">
                        <Label Text="Target Computers:" 
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        <Entry x:Name="TargetEntry"
                               Text="{Binding TargetInput}"
                               Placeholder="computer1, 192.168.1.100, server01"
                               FontSize="14"
                               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                               PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                               ReturnType="Go"
                               ReturnCommand="{Binding ScanCommand}" />
                    </StackLayout>
                </Frame>

                <!-- Action Buttons -->
                <StackLayout Grid.Row="3" 
                             Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="15">
                    <Button Text="🔍 Scan Computers"
                            Command="{Binding ScanCommand}"
                            BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                            TextColor="White"
                            WidthRequest="160"
                            HeightRequest="45"
                            CornerRadius="8"
                            FontAttributes="Bold" />
                    <Button Text="🗑️ Clear Results"
                            Command="{Binding ClearCommand}"
                            BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}"
                            TextColor="White"
                            WidthRequest="160"
                            HeightRequest="45"
                            CornerRadius="8"
                            FontAttributes="Bold" />
                </StackLayout>

                <!-- Results Section -->
                <CollectionView Grid.Row="4" 
                               ItemsSource="{Binding ComputerResults}"
                               IsVisible="{Binding HasResults}"
                               Margin="0,10,0,0"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Side-by-side Comparison Section -->
                <CollectionView Grid.Row="5"
                               ItemsSource="{Binding ComparisonResults}"
                               IsVisible="{Binding HasResults}"
                               Margin="0,10,0,0"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                   BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                                   Padding="20"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="Auto">
                                    <!-- Scan Result (Left) -->
                                    <ScrollView Grid.Column="0">
                                        <StackLayout Spacing="10">
                                            <Label Text="Scan Result" FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}" />
                                            <!-- Begin migrated detailed info for ScriptInfo -->
                                            <StackLayout IsVisible="{Binding ScriptInfo.IsError}" Spacing="10">
                                                <StackLayout Orientation="Horizontal" Spacing="10">
                                                    <Label Text="⚠️" FontSize="24" VerticalOptions="Center" />
                                                    <Label Text="{Binding ScriptInfo.DisplayName}" 
                                                           FontSize="18" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#D32F2F, Dark=#F44336}"
                                                           VerticalOptions="Center" />
                                                </StackLayout>
                                                <Label Text="{Binding ScriptInfo.Manufacturer}"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                       LineBreakMode="WordWrap" />
                                            </StackLayout>
                                            <StackLayout IsVisible="{Binding ScriptInfo.IsError, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">
                                                <StackLayout Orientation="Horizontal" Spacing="10">
                                                    <Label Text="💻" FontSize="24" VerticalOptions="Center" />
                                                    <Label Text="{Binding ScriptInfo.DisplayName}" 
                                                           FontSize="20" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                           VerticalOptions="Center" />
                                                </StackLayout>
                                                <StackLayout Spacing="8">
                                                    <Label Text="🖥️ System Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                        <Label Grid.Row="0" Grid.Column="0" Text="OS:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding ScriptInfo.OperatingSystem}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="1" Grid.Column="0" Text="Architecture:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding ScriptInfo.OSArchitecture}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="2" Grid.Column="0" Text="Processor:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding ScriptInfo.ProcessorName}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="3" Grid.Column="0" Text="BIOS Version:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding ScriptInfo.BIOSVersion}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="4" Grid.Column="0" Text="Uptime:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="4" Grid.Column="1" Text="{Binding ScriptInfo.Uptime}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding ScriptInfo.HasAssetTag}" Spacing="8">
                                                    <Label Text="🏷️ Asset Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10">
                                                        <Label Grid.Row="0" Grid.Column="0" Text="Asset Tag:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding ScriptInfo.AssetTag}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding ScriptInfo.HasMemoryInfo}" Spacing="8">
                                                    <Label Text="🧠 Memory Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                        <Label Grid.Row="0" Grid.Column="0" Text="Type:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding ScriptInfo.RAMType}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="1" Grid.Column="0" Text="Installed:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding ScriptInfo.RAMInstalled}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="2" Grid.Column="0" Text="Usage:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding ScriptInfo.RAMUsageInfo}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding ScriptInfo.HasDriveInfo}" Spacing="8">
                                                    <Label Text="💽 Drive Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <StackLayout Spacing="5">
                                                        <CollectionView ItemsSource="{Binding ScriptInfo.DriveDetails}"
                                                                       SelectionMode="None">
                                                            <CollectionView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid ColumnDefinitions="Auto,Auto,*" RowSpacing="2" ColumnSpacing="10" Padding="0,2">
                                                                        <Label Grid.Column="1" 
                                                                               Text="{Binding DriveLetter, StringFormat='{0}'}" 
                                                                               FontAttributes="Bold" 
                                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                                                                               VerticalOptions="Start"
                                                                               MinimumWidthRequest="40" />
                                                                        <StackLayout Grid.Column="1" Spacing="2">
                                                                            <Label Text="{Binding SizeInfo}" 
                                                                                   FontSize="14"
                                                                                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                                            <Label Text="{Binding FreeSpaceInfo}" 
                                                                                   FontSize="12"
                                                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                                            <Label Text="{Binding FileSystem, StringFormat='File System: {0}'}" 
                                                                                   FontSize="12"
                                                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                                        </StackLayout>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Spacing="8" IsVisible="{Binding ScriptInfo.HasNetworkAdapters}">
                                                    <Label Text="🌐 Network Information"
                                                           LineBreakMode="WordWrap"
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <VerticalStackLayout Spacing="8">
                                                        <Label Text="Domain/Workgroup:" FontAttributes="Bold" />
                                                        <Label Text="{Binding ScriptInfo.DomainOrWorkgroupDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Domain Joined:" FontAttributes="Bold" />
                                                        <Label Text="{Binding ScriptInfo.IsDomainJoinedDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="DNS Servers:" FontAttributes="Bold" />
                                                        <Label Text="{Binding ScriptInfo.DNSServersDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Default Gateways:" FontAttributes="Bold" />
                                                        <Label Text="{Binding ScriptInfo.DefaultGatewaysDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Subnet Masks:" FontAttributes="Bold" />
                                                        <Label Text="{Binding ScriptInfo.SubnetMasksDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                    </VerticalStackLayout>
                                                    <StackLayout Spacing="5">
                                                        <CollectionView ItemsSource="{Binding ScriptInfo.NetworkAdapters}"
                                                                       SelectionMode="None">
                                                            <CollectionView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10" Padding="0,2">
                                                                        <Label Grid.Column="0" 
                                                                               Text="{Binding Name, StringFormat='{0}:'}" 
                                                                               FontAttributes="Bold" 
                                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                                                                               VerticalOptions="Start" />
                                                                        <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="15" FlowDirection="LeftToRight">
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasIPAddress}">
                                                                                <Label Text="{Binding IPAddress}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasMACAddress}">
                                                                                <Label Text="MAC:" 
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                                                       VerticalOptions="Center" />
                                                                                <Label Text="{Binding FormattedMACAddress}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasSpSubnetMasksDisplayed}">
                                                                                <Label Text="Subnet:" 
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                                                       VerticalOptions="Center" />
                                                                                <Label Text="{Binding SubnetMask}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <Label IsVisible="{Binding HasIPAddress, Converter={StaticResource InvertedBoolConverter}}"
                                                                                   Text="No network data available"
                                                                                   FontSize="14"
                                                                                   FontAttributes="Italic"
                                                                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                                                   VerticalOptions="Center" />
                                                                        </StackLayout>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Spacing="8" IsVisible="{Binding ScriptInfo.HasNetworkAdapters, Converter={StaticResource InvertedBoolConverter}}">
                                                    <Label Text="🌐 Network Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Frame BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2A2A2A}"
                                                           BorderColor="{AppThemeBinding Light=#E9ECEF, Dark=#3A3A3A}"
                                                           Padding="10"
                                                           CornerRadius="6">
                                                        <Label Text="{Binding ScriptInfo.NetworkInfo}"
                                                               FontFamily="Consolas"
                                                               FontSize="12"
                                                               LineBreakMode="WordWrap"
                                                               TextColor="{AppThemeBinding Light=#000000, Dark=#E0E0E0}" />
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </StackLayout>
                                    </ScrollView>
                                    <!-- Divider -->
                                    <BoxView Grid.Column="1" WidthRequest="1" Color="{AppThemeBinding Light=#CCCCCC, Dark=#444444}" Margin="10,0" />
                                    <!-- Database Result (Right) -->
                                    <ScrollView Grid.Column="2">
                                        <StackLayout Spacing="10">
                                            <Label Text="Database Record" FontAttributes="Bold" FontSize="16" TextColor="{AppThemeBinding Light=#388E3C, Dark=#81C784}" />
                                            <!-- Begin migrated detailed info for DatabaseInfo -->
                                            <StackLayout IsVisible="{Binding DatabaseInfo.IsError}" Spacing="10">
                                                <StackLayout Orientation="Horizontal" Spacing="10">
                                                    <Label Text="⚠️" FontSize="24" VerticalOptions="Center" />
                                                    <Label Text="{Binding DatabaseInfo.DisplayName}" 
                                                           FontSize="18" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#D32F2F, Dark=#F44336}"
                                                           VerticalOptions="Center" />
                                                </StackLayout>
                                                <Label Text="{Binding DatabaseInfo.Manufacturer}"
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                       LineBreakMode="WordWrap" />
                                            </StackLayout>
                                            <StackLayout IsVisible="{Binding DatabaseInfo.IsError, Converter={StaticResource InvertedBoolConverter}}" Spacing="15">
                                                <StackLayout Orientation="Horizontal" Spacing="10">
                                                    <Label Text="💻" FontSize="24" VerticalOptions="Center" />
                                                    <Label Text="{Binding DatabaseInfo.DisplayName}" 
                                                           FontSize="20" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                           VerticalOptions="Center" />
                                                </StackLayout>
                                                <StackLayout Spacing="8">
                                                    <Label Text="🖥️ System Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding UpdateOsName}" VerticalOptions="Center" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="OS:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding DatabaseInfo.OperatingSystem}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding UpdateOsArchitecture}" VerticalOptions="Center" />
                                                        <Label Grid.Row="1" Grid.Column="1" Text="Architecture:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="1" Grid.Column="2" Text="{Binding DatabaseInfo.OSArchitecture}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <CheckBox Grid.Row="2" Grid.Column="0" IsChecked="{Binding UpdateCpuInfo}" VerticalOptions="Center" />
                                                        <Label Grid.Row="2" Grid.Column="1" Text="Processor:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="2" Grid.Column="2" Text="{Binding DatabaseInfo.ProcessorName}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <CheckBox Grid.Row="3" Grid.Column="0" IsChecked="{Binding UpdateBIOSVersion}" VerticalOptions="Center" />
                                                        <Label Grid.Row="3" Grid.Column="1" Text="BIOS Version:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="3" Grid.Column="2" Text="{Binding DatabaseInfo.BIOSVersion}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding DatabaseInfo.HasAssetTag}" Spacing="8">
                                                    <Label Text="🏷️ Asset Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,Auto,*" RowSpacing="5" ColumnSpacing="10">
                                                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding UpdateAssetTag}" VerticalOptions="Center" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="Asset Tag:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding DatabaseInfo.AssetTag}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding DatabaseInfo.HasMemoryInfo}" Spacing="8">
                                                    <Label Text="🧠 Memory Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="5" ColumnSpacing="10">
                                                        <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding UpdateRamType}" VerticalOptions="Center" />
                                                        <Label Grid.Row="0" Grid.Column="1" Text="Type:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding DatabaseInfo.RAMType}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding UpdateRamInstalled}" VerticalOptions="Center" />
                                                        <Label Grid.Row="1" Grid.Column="1" Text="Installed:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="1" Grid.Column="2" Text="{Binding DatabaseInfo.RAMInstalled}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                        <Label Grid.Row="2" Grid.Column="1" Text="Usage:" FontAttributes="Bold" TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                        <Label Grid.Row="2" Grid.Column="2" Text="{Binding DatabaseInfo.RAMUsageInfo}" TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                    </Grid>
                                                </StackLayout>
                                                <StackLayout IsVisible="{Binding DatabaseInfo.HasDriveInfo}" Spacing="8">
                                                    <Grid ColumnDefinitions="Auto,Auto,*" VerticalOptions="Center" RowSpacing="5" ColumnSpacing="10">
                                                        <CheckBox Grid.Column="0" IsChecked="{Binding UpdateDriveInfo}" VerticalOptions="Center" Margin="0,-2,0,0" />
                                                        <Label Grid.Column="1" Text="💽" HeightRequest="24" VerticalOptions="Center" />
                                                        <Label Grid.Column="2" Text="Drive Information"
                                                               LineBreakMode="WordWrap"
                                                               FontSize="16" 
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />                                                        
                                                    </Grid>                                    
                                                    <StackLayout Spacing="5">
                                                        <CollectionView ItemsSource="{Binding DatabaseInfo.DriveDetails}"
                                                                       SelectionMode="None">
                                                            <CollectionView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,*" RowSpacing="5" ColumnSpacing="10" Padding="0,2">
                                                                        <Label Grid.Column="3" 
                                                                               Text="{Binding DriveLetter, StringFormat='{0}'}" 
                                                                               FontAttributes="Bold" 
                                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                                                                               VerticalOptions="Start"
                                                                               MinimumWidthRequest="40" />
                                                                        <StackLayout Grid.Column="4" Spacing="2">
                                                                            <Label Text="{Binding SizeInfo}" 
                                                                                   FontSize="14"
                                                                                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                                                                            <Label Text="{Binding FreeSpaceInfo}" 
                                                                                   FontSize="12"
                                                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                                            <Label Text="{Binding FileSystem, StringFormat='File System: {0}'}" 
                                                                                   FontSize="12"
                                                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                                                                        </StackLayout>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Spacing="8" IsVisible="{Binding DatabaseInfo.HasNetworkAdapters}">
                                                    <Grid ColumnDefinitions="Auto,Auto,*" VerticalOptions="Center" RowSpacing="5" ColumnSpacing="10">
                                                        <CheckBox Grid.Column="0" IsChecked="{Binding UpdateNetworkAdapters}" VerticalOptions="Center" Margin="0,-2,0,0" />
                                                        <Label Grid.Column="1" Text="🌐" HeightRequest="24" VerticalOptions="Center" />
                                                        <Label Grid.Column="2" Text="Network Information"
                                                               LineBreakMode="WordWrap"
                                                               FontSize="16" 
                                                               FontAttributes="Bold"
                                                               VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    </Grid>
                                                    <VerticalStackLayout Spacing="8" Margin="85,0,0,0">
                                                        <Label Text="Domain/Workgroup:" FontAttributes="Bold" />
                                                        <Label Text="{Binding DatabaseInfo.DomainOrWorkgroupDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Domain Joined:" FontAttributes="Bold" />
                                                        <Label Text="{Binding DatabaseInfo.IsDomainJoinedDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="DNS Servers:" FontAttributes="Bold" />
                                                        <Label Text="{Binding DatabaseInfo.DNSServersDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Default Gateways:" FontAttributes="Bold" />
                                                        <Label Text="{Binding DatabaseInfo.DefaultGatewaysDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                        <Label Text="Subnet Masks:" FontAttributes="Bold" />
                                                        <Label Text="{Binding DatabaseInfo.SubnetMasksDisplay}" Margin="20,0,0,0" LineBreakMode="WordWrap" />
                                                    </VerticalStackLayout>
                                                    <StackLayout Spacing="5">
                                                        <CollectionView ItemsSource="{Binding DatabaseInfo.NetworkAdapters}"
                                                                       SelectionMode="None">
                                                            <CollectionView.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10" Padding="0,2">
                                                                        <Label Grid.Column="0" 
                                                                               Text="{Binding Name, StringFormat='{0}:'}" 
                                                                               FontAttributes="Bold" 
                                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" 
                                                                               VerticalOptions="Start" />
                                                                        <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="15" FlowDirection="LeftToRight">
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasIPAddress}">
                                                                                <Label Text="{Binding IPAddress}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasMACAddress}">
                                                                                <Label Text="MAC:" 
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                                                       VerticalOptions="Center" />
                                                                                <Label Text="{Binding FormattedMACAddress}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal" Spacing="5" IsVisible="{Binding HasSpSubnetMasksDisplayed}">
                                                                                <Label Text="Subnet:" 
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                                                                       VerticalOptions="Center" />
                                                                                <Label Text="{Binding SubnetMask}" 
                                                                                       FontFamily="Consolas"
                                                                                       FontSize="14"
                                                                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                                                                       VerticalOptions="Center" />
                                                                            </StackLayout>
                                                                            <Label IsVisible="{Binding HasIPAddress, Converter={StaticResource InvertedBoolConverter}}"
                                                                                   Text="No network data available"
                                                                                   FontSize="14"
                                                                                   FontAttributes="Italic"
                                                                                   TextColor="{AppThemeBinding Light=#999999, Dark=#666666}"
                                                                                   VerticalOptions="Center" />
                                                                        </StackLayout>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </CollectionView.ItemTemplate>
                                                        </CollectionView>
                                                    </StackLayout>
                                                </StackLayout>
                                                <StackLayout Spacing="8" IsVisible="{Binding DatabaseInfo.HasNetworkAdapters, Converter={StaticResource InvertedBoolConverter}}">
                                                    <Label Text="🌐 Network Information" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold"
                                                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                                                    <Frame BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2A2A2A}"
                                                           BorderColor="{AppThemeBinding Light=#E9ECEF, Dark=#3A3A3A}"
                                                           Padding="10"
                                                           CornerRadius="6">
                                                        <Label Text="{Binding DatabaseInfo.NetworkInfo}"
                                                               FontFamily="Consolas"
                                                               FontSize="12"
                                                               LineBreakMode="WordWrap"
                                                               TextColor="{AppThemeBinding Light=#000000, Dark=#E0E0E0}" />
                                                    </Frame>
                                                </StackLayout>
                                            </StackLayout>
                                        </StackLayout>
                                    </ScrollView>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>   
                </CollectionView>

                <!-- Status/Loading Section -->
                <StackLayout Grid.Row="6" 
                             HorizontalOptions="Center"
                             IsVisible="{Binding IsScanning}"
                             Margin="0,10,0,0">
                    <ActivityIndicator IsRunning="{Binding IsScanning}"
                                       Color="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                       WidthRequest="30"
                                       HeightRequest="30" />
                    <Label Text="{Binding StatusMessage}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>

            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>