<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             x:Class="MauiApp1.Views.DocumentationPage"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Application Header -->
        <controls:AppHeader Grid.Row="0" />
        
        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*" Padding="10">
            
            <!-- Documentation List (Left Sidebar) -->
            <Border Grid.Column="0" 
                    BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2B2B2B}"
                    Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                    StrokeThickness="1"
                    Margin="0,0,5,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <ScrollView>
                    <VerticalStackLayout Spacing="5" Padding="10">
                        
                        <!-- Header -->
                        <Label Text="ðŸ“š Documentation"
                               FontSize="18"
                               FontAttributes="Bold"
                               Margin="0,0,0,10"/>
                        
                        <!-- Search Button -->
                        <Button Text="ðŸ” Search Documentation"
                                Command="{Binding SearchDocumentationCommand}"
                                BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#BBDEFB}"
                                FontSize="12"
                                Margin="0,0,0,10"/>
                        
                        <!-- Back Button (Visible when document is selected) -->
                        <Button Text="â† Back to List"
                                Command="{Binding BackToDocumentListCommand}"
                                IsVisible="{Binding IsDocumentSelected}"
                                BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#E65100}"
                                TextColor="{AppThemeBinding Light=#F57C00, Dark=#FFB74D}"
                                FontSize="12"
                                Margin="0,0,0,10"/>
                        
                        <!-- Documentation Items -->
                        <CollectionView ItemsSource="{Binding DocumentationItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5">
                                        <Border BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#383838}"
                                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#505050}"
                                                StrokeThickness="1">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6"/>
                                            </Border.StrokeShape>
                                            
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadDocumentCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            
                                            <VerticalStackLayout Padding="10" Spacing="5">
                                                <Label Text="{Binding Title}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding Description}"
                                                       FontSize="11"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                                       LineBreakMode="WordWrap"/>
                                                <Label Text="{Binding Category}"
                                                       FontSize="10"
                                                       BackgroundColor="{AppThemeBinding Light=#E8F5E8, Dark=#2E7D32}"
                                                       TextColor="{AppThemeBinding Light=#2E7D32, Dark=#C8E6C9}"
                                                       Padding="5,2"
                                                       HorizontalOptions="Start"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
            
            <!-- Documentation Content (Right Panel) -->
            <Border Grid.Column="1" 
                    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2B2B2B}"
                    Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                    StrokeThickness="1"
                    Margin="5,0,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <Grid RowDefinitions="Auto,*">
                    
                    <!-- Content Header -->
                    <Border Grid.Row="0"
                            BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#383838}"
                            Padding="15,10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8,8,0,0"/>
                        </Border.StrokeShape>
                        
                        <Label Text="{Binding SelectedDocumentTitle}"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <!-- Content Body -->
                    <ScrollView Grid.Row="1" Padding="15">
                        <Label Text="{Binding SelectedDocumentContent}"
                               FontSize="14"
                               LineHeight="1.4"
                               TextType="Html"
                               VerticalOptions="Start"/>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
