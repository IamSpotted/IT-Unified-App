<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiApp1.Views.NetworkingPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModels"
             xmlns:converters="clr-namespace:MauiApp1.Converters"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource PageBackgroundBrush}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Application Header -->
        <controls:AppHeader Grid.Row="0" />
        
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <Grid Padding="20" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Page Title -->
                <Label Grid.Row="0"
                       Text="🌐 Network Tools"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />

                <!-- Network Tools Cards -->
                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="15" RowSpacing="15">
                    
                    <!-- Connectivity Test Card -->
                    <Frame Grid.Column="0"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                           Padding="20"
                           CornerRadius="12"
                           HasShadow="True">
                        <StackLayout Spacing="15">
                            <Label Text="🔍 Connectivity Test"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Test network connectivity with live ping results and detailed statistics"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                            
                            <Button Text="Launch Test"
                                    Command="{Binding LaunchConnectivityTestCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    FontAttributes="Bold" />
                        </StackLayout>
                    </Frame>
                    
                    <!-- Network Diagnostics Card -->
                    <Frame Grid.Column="1"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                           Padding="20"
                           CornerRadius="12"
                           HasShadow="True">
                        <StackLayout Spacing="15">
                            <Label Text="🔧 Network Diagnostics"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#4CAF50, Dark=#81C784}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Comprehensive network configuration analysis and diagnostics"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                            
                            <Button Text="Run Diagnostics"
                                    Command="{Binding RunNetworkDiagnosticsCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#81C784}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    FontAttributes="Bold" />
                        </StackLayout>
                    </Frame>
                    
                    <!-- Multi-Ping Dashboard Card -->
                    <Frame Grid.Column="2"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                           Padding="20"
                           CornerRadius="12"
                           HasShadow="True">
                        <StackLayout Spacing="15">
                            <Label Text="📡 Multi-Ping Dashboard"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#FF5722, Dark=#FF8A65}"
                                   HorizontalOptions="Center" />
                            
                            <Label Text="Monitor multiple targets simultaneously with real-time ping results and statistics"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                            
                            <Button Text="Launch Dashboard"
                                    Command="{Binding LaunchMultiPingCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#FF5722, Dark=#FF8A65}"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    FontAttributes="Bold" />
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Quick Actions Section -->
                <Frame Grid.Row="2"
                       BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#2A2A2A}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True"
                       Margin="0,10,0,0">
                    <StackLayout Spacing="15">
                        <Label Text="⚡ Quick Actions"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                               HorizontalOptions="Center" />
                        
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                            <Button Grid.Column="0"
                                    Text="📊 IP Config"
                                    Command="{Binding ShowIpConfigCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}"
                                    TextColor="White"
                                    CornerRadius="6"
                                    HeightRequest="35"
                                    FontSize="12" />
                            
                            <Button Grid.Column="1"
                                    Text="🌐 DNS Lookup"
                                    Command="{Binding ShowDnsLookupCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#9C27B0, Dark=#BA68C8}"
                                    TextColor="White"
                                    CornerRadius="6"
                                    HeightRequest="35"
                                    FontSize="12" />
                            
                            <Button Grid.Column="2"
                                    Text="📈 Net Stats"
                                    Command="{Binding ShowNetStatsCommand}"
                                    BackgroundColor="{AppThemeBinding Light=#607D8B, Dark=#90A4AE}"
                                    TextColor="White"
                                    CornerRadius="6"
                                    HeightRequest="35"
                                    FontSize="12" />
                        </Grid>
                    </StackLayout>
                </Frame>

                <!-- Information Section -->
                <Frame Grid.Row="3"
                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                       BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                       Padding="20"
                       CornerRadius="12"
                       HasShadow="True"
                       Margin="0,10,0,0">
                    <StackLayout Spacing="10">
                        <Label Text="📋 Network Tools Information"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}" />
                        
                        <Label Text="This page provides access to essential network troubleshooting and diagnostic tools:"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                        
                        <StackLayout Spacing="5" Margin="10,5,0,0">
                            <Label Text="• Connectivity Test: Real-time ping testing with live statistics"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#DDDDDD}" />
                            <Label Text="• Network Diagnostics: Comprehensive system network analysis"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#DDDDDD}" />
                            <Label Text="• Quick Actions: Fast access to common network commands"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#DDDDDD}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

            </Grid>
        </ScrollView>
    </Grid>

</ContentPage>
